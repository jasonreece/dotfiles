# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

#Git Shortcuts
alias g="git"
alias gs='git status'
alias ga='git add'
alias gc='git commit -m'
alias gb='git branch'
alias gch='git checkout'
alias gl='git log'
# alias gd='git diff'
alias gma='git commit -am'
alias gra='git remote add'
alias grr='git remote rm'
alias gcl='git clone'

alias gitopen='~/bin/git-open'

alias h="history"
alias v="vim"
